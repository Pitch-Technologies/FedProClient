        <version>1.0</version>
        <modificationDate>2024-11-18</modificationDate>
        <securityClassification>unclassified</securityClassification>
        <copyright>Pitch Technologies AB</copyright>
        <purpose>Small demo of HLA 4 usage.</purpose>
        <applicationDomain></applicationDomain>
        <description>Allows for directed communication in a Chat Federation</description>
        <useLimitation></useLimitation>
        <other></other>
    </modelIdentification>
    <objects>
        <objectClass>
            <name>HLAobjectRoot</name>
            <objectClass>
                <name>Participant</name>
                <sharing>PublishSubscribe</sharing>
                <directedInteraction>
                    <name>HLAinteractionRoot.Communication</name>
                    <sharing>PublishSubscribe</sharing>
                </directedInteraction>
                <semantics>The user that connected to the Chat federation</semantics>
                <attribute>
                    <name>Name</name>
                    <dataType>HLAunicodeString</dataType>
                    <updateType>Static</updateType>
                    <updateCondition>On creation</updateCondition>
                    <valueRequired>false</valueRequired>
                    <ownership>NoTransfer</ownership>
                    <sharing>PublishSubscribe</sharing>
                    <transportation>HLAreliable</transportation>
                    <order>Receive</order>
                    <semantics>The name of the participant</semantics>
                </attribute>
            </objectClass>
        </objectClass>
    </objects>
    <interactions>
        <interactionClass>
            <name>HLAinteractionRoot</name>
            <interactionClass>
                <name>Communication</name>
                <sharing>PublishSubscribe</sharing>
                <transportation>HLAreliable</transportation>
                <order>Receive</order>
                <semantics>A message sent from a participant to all others, or to a specific participant</semantics>
                <parameter>
                    <name>Sender</name>
                    <dataType>HLAunicodeString</dataType>
                    <semantics>The sending participant's name</semantics>
                </parameter>
                <parameter>
                    <name>Message</name>
                    <dataType>HLAunicodeString</dataType>
                    <semantics>The message that is being sent</semantics>
                </parameter>
